# ==========================================
# CONFIGURAÇÕES GERAIS DO SISTEMA
# ==========================================
PROJECT_NAME="Bússola API"
API_V1_STR="/api/v1"
# Modos: SAAS ou SELF_HOSTED
DEPLOYMENT_MODE=SELF_HOSTED
ENABLE_PUBLIC_REGISTRATION=False

# ==========================================
# SEGURANÇA E AUTENTICAÇÃO
# ==========================================
# Gere uma chave segura com: openssl rand -hex 32
SECRET_KEY=change_this_to_a_secure_random_string
# Chave para criptografia de dados sensíveis no banco (ex: senhas salvas no cofre)
ENCRYPTION_KEY=change_this_to_a_fernet_key
ACCESS_TOKEN_EXPIRE_MINUTES=1440
ALGORITHM=HS256

# ==========================================
# BANCO DE DADOS
# ==========================================
DATABASE_URL=sqlite:///./data/bussola.db

# ==========================================
# INFRAESTRUTURA (REDIS/CACHE)
# ==========================================
REDIS_URL=

# ==========================================
# SERVIÇOS DE INTELIGÊNCIA ARTIFICIAL (LLMs)
# ==========================================
GROQ_API_KEY=
GEMINI_API_KEY=
OPENAI_API_KEY=

# ==========================================
# APIS EXTERNAS (NOTÍCIAS E CLIMA)
# ==========================================
OPENWEATHER_API_KEY=
NEWS_API_KEY=

# ==========================================
# SERVIÇO DE E-MAIL (SMTP)
# ==========================================
MAIL_USERNAME=user@example.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=user@example.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_FROM_NAME="Suporte Bússola"
MAIL_STARTTLS=True
MAIL_SSL_TLS=False

# ==========================================
# FRONTEND
# ==========================================
FRONTEND_URL=http://localhost:5173

# ==========================================
# INTEGRAÇÕES (OAUTH / PAGAMENTOS / SOCIAL)
# ==========================================
# Google Login
GOOGLE_CLIENT_ID=
VITE_GOOGLE_CLIENT_ID=

# Stripe (Pagamentos)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Discord
DISCORD_BOT_TOKEN=
DISCORD_CLIENT_ID=